<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.POI" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/crimson</item>
        <item name="colorPrimaryVariant">@color/crimson</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/brown</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Navigation Var Triangle, Square, Circle -->
        <item name="android:navigationBarColor">@color/firebrick</item>
    </style>
    <!-- Text Styles-->
    <style name="Texto_titulo">
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">@color/aliceblue</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Texto_subtitulo">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Texto_descripcion">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/darkgray</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>