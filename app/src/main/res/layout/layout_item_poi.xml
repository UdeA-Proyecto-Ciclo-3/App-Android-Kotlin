<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/item_poi_cardview_margin"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/item_poi_main_linear_layout_margin_start"
        android:layout_marginEnd="@dimen/item_poi_main_linear_layout_margin_end"
        android:layout_marginTop="@dimen/item_poi_main_linear_layout_margin_top"
        android:layout_marginBottom="@dimen/item_poi_main_linear_layout_margin_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_poi_main_linear_layout_height">

        <ImageView
            android:id="@+id/iv_place_preview"
            android:layout_width="@dimen/item_poi_main_image_view_width"
            android:layout_height="@dimen/item_poi_main_image_view_height"
            android:contentDescription="@+id/iv_place_preview" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_poi_secondary_linear_layout_height"
            android:layout_marginStart="@dimen/item_poi_secondary_linear_layout_margin_start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/item_poi_text_size_name_place"
                android:textStyle="bold"
                tools:text="Parque Nacional Natural Macuira" />

            <TextView
                android:id="@+id/tv_place_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/item_poi_text_size_place_description"
                tools:text="Ecosistema con presencia de montañas y bosques en medio de la zona desértica que predomina en la región" />

            <TextView
                android:id="@+id/tv_place_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/item_poi_text_size_place_temperature"
                android:layout_gravity="end"
                tools:text="27 C" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>